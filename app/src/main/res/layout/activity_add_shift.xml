<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Shift"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/departmentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department (e.g., ER)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/startTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Time (yyyy-MM-dd HH:mm)"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/endTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time (yyyy-MM-dd HH:mm)"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/saveShiftButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Shift" />
</LinearLayout>